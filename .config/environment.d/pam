# Editor to use
EDITOR=nvim

# Local PATH
PATH DEFAULT=@{HOME}/.local/bin:${PATH}

# Xauthority
#XAUTHORITY DEFAULT=${XDG_RUNTIME_DIR}/Xauthority

# Fcitx IM
#GTK_IM_MODULE=fcitx
#QT_IM_MODULE=fcitx

# KWallet ssh unlock
SSH_ASKPASS=/usr/bin/ksshaskpass

# intel VA-API
#LIBVA_DRIVER_NAME=iHD

# Qt automatic scaling based on pixel density of the monitor
#QT_AUTO_SCREEN_SCALE_FACTOR=1

# Plasma HiDPI Scale
#PLASMA_USE_QT_SCALING=1

# XDG Base Directory and things
XDG_CONFIG_HOME DEFAULT=@{HOME}/.config
XDG_CACHE_HOME  DEFAULT=@{HOME}/.cache
XDG_STATE_HOME  DEFAULT=@{HOME}/.local/state
XDG_DATA_HOME   DEFAULT=@{HOME}/.local/share

GTK_RC_FILES            DEFAULT=${XDG_CONFIG_HOME}/gtkrc
GTK2_RC_FILES           DEFAULT=${XDG_CONFIG_HOME}/gtkrc-2.0
NODE_REPL_HISTORY       DEFAULT=${XDG_STATE_HOME}/node/node_repl_history
NPM_CONFIG_USERCONFIG   DEFAULT=${XDG_CONFIG_HOME}/npm/npmrc
PYTHONSTARTUP           DEFAULT=${XDG_CONFIG_HOME}/python/init.py
ANDROID_HOME            DEFAULT=@{HOME}/Software/AndroidSDK
ANDROID_USER_HOME       DEFAULT=@{HOME}/.android
JAVA_TOOL_OPTIONS       DEFAULT="-Djava.util.prefs.userRoot=${XDG_DATA_HOME}/java -Dsun.java2d.uiScale=2 -Dawt.useSystemAAFontSettings=on -XX:-UsePerfData"
GRADLE_USER_HOME        DEFAULT=${XDG_DATA_HOME}/gradle
VSCODE_PORTABLE         DEFAULT=${XDG_DATA_HOME}/vscode
VSCODE_CLI_DATA_DIR     DEFAULT=${VSCODE_PORTABLE}/cli
PARALLEL_HOME           DEFAULT=${XDG_DATA_HOME}/parallel
OCTAVE_HISTFILE         DEFAULT=${XDG_STATE_HOME}/octave/octave_hist
OCTAVE_SITE_INITFIL     DEFAULT=${XDG_CONFIG_HOME}/octave/octaverc
TEXMFVAR                DEFAULT=${XDG_CACHE_HOME}/texlive/texmf-var
CUDA_CACHE_PATH         DEFAULT=${XDG_CACHE_HOME}/nvidia/cuda
GOPATH                  DEFAULT=${XDG_DATA_HOME}/go
GOMODCACHE              DEFAULT=${XDG_CACHE_HOME}/go/mod
CARGO_HOME              DEFAULT=${XDG_DATA_HOME}/cargo
NUGET_PACKAGES          DEFAULT=${XDG_CACHE_HOME}/NuGetPackages

#
# ~/.pam_environment
#

# Editor to use
EDITOR=nvim

# Local PATH
PATH DEFAULT=@{HOME}/.local/bin:${PATH}

# Xauthority
XAUTHORITY DEFAULT=${XDG_RUNTIME_DIR}/Xauthority

# Fcitx IM
GTK_IM_MODULE=fcitx
QT_IM_MODULE=fcitx
XMODIFIERS=@im=fcitx

# ssh agent
SSH_AUTH_SOCK DEFAULT=${XDG_RUNTIME_DIR}/ssh-agent.socket

# KWallet ssh unlock
SSH_ASKPASS=/usr/bin/ksshaskpass

# intel VA-API
#LIBVA_DRIVER_NAME=iHD

# Qt automatic scaling based on pixel density of the monitor
#QT_AUTO_SCREEN_SCALE_FACTOR=1

# Plasma HiDPI Scale
PLASMA_USE_QT_SCALING=1

# XDG Base Directory and things
XDG_CONFIG_HOME DEFAULT=@{HOME}/.config
XDG_CACHE_HOME  DEFAULT=@{HOME}/.cache
XDG_DATA_HOME   DEFAULT=@{HOME}/.local/share

LESSHISTFILE            DEFAULT=-
NODE_REPL_HISTORY       DEFAULT=${XDG_DATA_HOME}/node/node_repl_history
NPM_CONFIG_USERCONFIG   DEFAULT=${XDG_CONFIG_HOME}/npm/npmrc
PYTHONSTARTUP           DEFAULT=${XDG_CONFIG_HOME}/python/init.py
ANDROID_SDK_ROOT        DEFAULT=@{HOME}/Software/AndroidSDK
ANDROID_PREFS_ROOT      DEFAULT=${XDG_CONFIG_HOME}/android
ANDROID_EMULATOR_HOME   DEFAULT=${XDG_DATA_HOME}/android/emulator
JAVA_TOOL_OPTIONS       DEFAULT="-Djava.util.prefs.userRoot=${XDG_DATA_HOME}/java -Dsun.java2d.uiScale=2 -Dawt.useSystemAAFontSettings=on"
GRADLE_USER_HOME        DEFAULT=${XDG_DATA_HOME}/gradle
VSCODE_PORTABLE         DEFAULT=${XDG_DATA_HOME}/vscode
PARALLEL_HOME           DEFAULT=${XDG_DATA_HOME}/parallel
KDEHOME                 DEFAULT=${XDG_CONFIG_HOME}/kde